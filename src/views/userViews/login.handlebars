<h2> Log in </h2>

<div id = "login_error" class="error">I'm an error</div>
    
<form id = "login_form" action="/login" method="POST" class="searchuser-form">

    <label for="login_username">
        User Name
        <input id="login_username" type="text" name="user_name" placeholder="please input user name" class="full-width-input">
    </label>

    <br>

    <label for="login_passwd">
        Password
        <input id="login_passwd" type="password" name="user_password" placeholder="please input password" class="full-width-input">
    </label>

    <br>
    {{#if error_msg}}
        <p> {{error_msg}} </p>
    {{/if}}

    <br>
    <br>

    <button type="submit" class="btn"> login </button>

