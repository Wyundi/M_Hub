<h2> {{data_name}} </h2>

<ul class="ul-comment">
    {{#each comment}}
        <li class="li-comment"> 
            {{this.commentDate}} - {{this.username}}: {{this.comment}}
        </li>
    {{/each}}
</ul>

<br>

<h4>Make your comment</h4>
<p>

<label>

<script type="text/javascript">

function show()

{

var value = document.getElementById("div1").style.display;

if(value=="none")

{

document.getElementById("div1").style.display="block";

}

else

document.getElementById("div1").style.display="none";

}

</script>


<input type="button" value="Comment" onClick="show()"/>

<div id="div1" style="display:none">
    <form action="/comment/data/{{dataId}}" method="POST">
        <label for="comment"> Leave a comment here!</label>
        <br>
        <textarea name="comment" id="comment" cols="30" rows="5" ></textarea>
        <br>
        <button type="submit" class="btn"> submit</button>
        <br>
    </form>

</div>

</div>

