<form action="/model" method="POST" class="search">

    <label for="search_model">
        search in model list
        <input id="search_model" type="text" name="search_input" class="full-width-input">
    </label>

    <button type="submit" class="btn"> search </button>

</form>

<ul>
    {{#each model_list}}
        <li>
            <a href="./info/{{_id}}"> {{model_name}} </a>
            <p> {{description}} </p>
        </li>
    {{/each}}
</ul>